{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "config": {
      "nixpacks": {
        "buildCommands": [
          "cp .env.production .env || true",
          "composer install --ignore-platform-reqs",
          "npm ci",
          "npm run build"
        ]
      }
    }
  },
  "deploy": {
    "startCommand": "php artisan migrate --force && php -S 0.0.0.0:$PORT -t public"
  }
}
