# à configurer dans Railway Dashboard

# Laravel
APP_NAME="Stock R4E"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://votre-app.up.railway.app

# Base de données (Railway MySQL)
DB_CONNECTION=mysql
DB_HOST=${MYSQLHOST}
DB_PORT=${MYSQLPORT}
